@model IEnumerable<ProyectoDTO>

@if(Model is not null){
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var pr in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@pr.imageUrl" class="card-img-top" alt="imagen proyecto" />
                        <div class="card-body">
                            <h5 class="card-title">@pr.title</h5>
                            <p class="card-text">@pr.description</p>
                        </div>

                        <div class="card-footer">
                            <a class="btn btn-primary" href="@pr.link" target="_blank" rel="noopener noreferrer">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

